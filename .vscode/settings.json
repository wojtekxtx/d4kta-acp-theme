{
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    // Editor
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": false
    },
    "editor.formatOnSave": true,

    // JavaScript
    "javascript.format.enable": true,

    // JSON
    "json.schemas": [
        {
            "fileMatch": [
                "cypress.json"
            ],
            "url": "https://on.cypress.io/cypress.schema.json"
        },
        {
            "fileMatch": [
                ".prettierrc.json"
            ],
            "url": "http://json.schemastore.org/prettierrc"
        },
        {
            "fileMatch": [
                "tslint.json"
            ],
            "url": "http://json.schemastore.org/tslint"
        }
    ],

    // Styling
    "scss.lint.duplicateProperties": "warning",
    "scss.format.enable": true,
    "scss.format.braceStyle": "expand",
    "scss.format.preserveNewLines": true,
    "scss.format.maxPreserveNewLines": 2,
    "scss.format.newlineBetweenRules": true,
    "scss.format.newlineBetweenSelectors": true,
    "scss.format.spaceAroundSelectorSeparator": false,
    "scss.hover.references": true,
    "scss.hover.documentation": true,
    "scss.lint.emptyRules": "warning",
    "scss.lint.boxModel": "ignore"
}
